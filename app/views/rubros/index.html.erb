<p id="notice"><%= notice %></p>
<div class="container">
    <table class="table table-dark">
        <thead>
            <tr>
                <th>Id</th><th>Nombre</th><th>Perecedero</th><th colspan="3"></th>
                <th class="text-center"><%= link_to 'Nuevo', new_rubro_path, :class => "btn btn-primary" %></th>
            </tr>
        </thead>
        <tbody>
          <% @rubros.each do |rubro| %>
            <tr>
              <td><%= rubro.nombre %></td>
              <td><%= rubro.perecedero %></td>
              <td><%= link_to 'Mostrar', rubro, :class => "btn btn-warning" %></td>
              <td><%= link_to 'Editar', edit_rubro_path(rubro), :class => "btn btn-success" %></td>
            </tr>   
          <% end %>
        </tbody>
    </table>
</div>
